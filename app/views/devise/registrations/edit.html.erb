<% turbo_page_requires_reload %>
<div role="dialog" tabindex="-1" class="fixed inset-0 z-30 flex items-center justify-center w-full h-screen p-2">
  <div class="fixed inset-0 block w-full h-screen cursor-default bg-gray-900/30"></div>
  <div class="relative z-20 w-full max-w-xs max-h-screen overflow-y-auto bg-white shadow-lg rounded-md p-5">
    <h1 class="mb-5 text-center text-2xl"><%= t(".title", resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: "registrations.edit.title")) %></h1>

    <div class="mb-8 text-center">
      <div class="inline-flex flex-col">
        <%= button_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure"), turbo_confirm: t(".are_you_sure") }, method: :delete, class: "py-1.5 px-4 transition-colors bg-indigo-600 font-medium text-white w-45 shadow-xs rounded-sm hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    </div>

    <div class="text-center">
      <%= link_to t("devise.shared.links.back"), :back, class: "link-primary" %>
    </div>
  </div>
</div>
